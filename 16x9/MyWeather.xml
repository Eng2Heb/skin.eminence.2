<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- weather -->
    <backgroundcolor>Background</backgroundcolor>
    <defaultcontrol always="true">100</defaultcontrol>

    <controls>

        <!-- Hidden button -->
        <control type="button" id="100">
            <onclick condition="!Skin.HasSetting(KioskMode)">SetFocus(3001)</onclick>
            <onup condition="!Skin.HasSetting(KioskMode)">3001</onup>
            <ondown condition="!Skin.HasSetting(KioskMode)">3001</ondown>
            <onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
            <onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
        </control>

        <!-- Background -->
        <include>Furniture_Background</include>
        <include>Furniture_TopBar</include>
        <include>Furniture_RSS</include>

        <control type="group">
            <posy>666</posy>
            <height>340</height>
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <control type="image">
                <top>-24</top>
                <bottom>-24</bottom>
                <left>-24</left>
                <right>-24</right>
                <texture colordiffuse="HomeBarBG">common/white.png</texture>
                <bordertexture border="24">common/24-shadow.png</bordertexture>
                <bordersize>24</bordersize>
            </control>
            <control type="image">
                <posx>750</posx>
                <width>2000</width>
                <height>340</height>    
                <texture colordiffuse="PosterBorder" border="150">common/half-tile.png</texture>
            </control>

            <control type="grouplist">
                
                <posx>64</posx>
                <posy>20</posy>
                <width>650</width>
                <orientation>vertical</orientation>
                <control type="label">
                    <label>$INFO[Weather.Location]</label>
                    <aligny>top</aligny>
                    <height>35</height>
                    <animation effect="fade" start="100" end="70" condition="true">Conditional</animation>
                    <textcolor>HomeBarFG</textcolor>
                </control>
                <control type="label">
                    <label>$INFO[Weather.Conditions,,  ]$INFO[Weather.Temperature]</label>
                    <aligny>top</aligny>
                    <font>Font-WidgetInfoTitle</font>
                    <height>70</height>
                    <textcolor>$VAR[HighlightColor2]</textcolor>
                </control>
                <control type="textbox">
                    <label>$INFO[Window(weather).Property(Current.FeelsLike),$LOCALIZE[402] ,]$INFO[System.TemperatureUnits]$INFO[Window(weather).Property(Current.WindSpeed),[CR], ]$INFO[Window(weather).Property(Current.WindDirection),, [LOWERCASE]$LOCALIZE[404][/LOWERCASE]]$INFO[Window(weather).Property(Current.Humidity),[CR], [LOWERCASE]$LOCALIZE[406][/LOWERCASE]]</label>
                    <aligny>top</aligny>
                    <align>left</align>
                    <height>120</height>
                    <animation effect="fade" start="100" end="70" condition="true">Conditional</animation>
                    <textcolor>HomeBarFG</textcolor>
                    <font>Font-ListInfo</font>
                </control>
                <control type="label">
                    <label>$INFO[Window(weather).Property(WeatherProvider)]</label>
                    <aligny>center</aligny>
                    <animation effect="fade" start="100" end="70" condition="true">Conditional</animation>
                    <font>Font-ListInfo-Small</font>
                    <height>65</height>
                    <textcolor>HomeBarFG</textcolor>
                </control>
            </control>
            <control type="grouplist">
                <left>850</left>
                <right>0</right>
                <orientation>horizontal</orientation>
                <height>340</height>
                <itemgap>70</itemgap>
                <include name="Object_WeatherOutlook">
                    <param name="day" value="Day0" />
                    <param name="dayname" value="$LOCALIZE[33006]" />
                </include>
                <include name="Object_WeatherOutlook">
                    <param name="day" value="Day1" />
                </include>
                <include name="Object_WeatherOutlook">
                    <param name="day" value="Day2" />
                </include>
                <include name="Object_WeatherOutlook">
                    <param name="day" value="Day3" />
                </include>
            </control>
        </control>

    </controls>

</window>