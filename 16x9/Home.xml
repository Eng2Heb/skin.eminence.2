<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- home -->
    <backgroundcolor>HomeBarBG</backgroundcolor>
    <defaultcontrol always="true">9000</defaultcontrol>
    <onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu|x1101|x1102|x1103|x1104|x1105|x1106|x1107|x1108|x1109)</onload>
    <onload>ClearProperty(Header.Label,home)</onload>
    <onload>ClearProperty(Header.Icon,home)</onload>
    <onload>ClearProperty(HighlightColor,home)</onload>
    <onload>ClearProperty(FO9001)</onload>
    <onload>ClearProperty(extinfo,home)</onload>
    <onload>SetProperty(HubReturn,Home)</onload>
    <!-- <onunload>SetProperty(FO9001,1,home)</onunload> -->
    <onunload>SetProperty(Header.Label,$INFO[Container(9000).ListItem.Label],home)</onunload>
    <onunload>SetProperty(Header.Icon,$INFO[Container(9000).ListItem.Icon],home)</onunload>
    <onunload condition="!IsEmpty(Container(9000).ListItem.Property(TileColor)">SetProperty(HighlightColor,$INFO[Container(9000).ListItem.Property(TileColor)],home)</onunload>
    <controls>

        <include>Furniture_Background</include>
        <include>Home_Widget_Control</include>
        <include>Furniture_TopBar</include>
        
        <control type="group">
            <animation effect="slide" start="0" end="0,266" time="500" tween="back" reversible="false" easing="out" condition="Control.HasFocus(9001)">Conditional</animation>
            <animation effect="slide" end="0" start="0,266" time="150" reversible="false" condition="!Control.HasFocus(9001)">Conditional</animation>
            <include>Home_Widget</include>
            
            <control type="group">
                <animation effect="slide" tween="quadratic" easing="out" time="150" start="0,266" end="0">WindowOpen</animation>
                <animation effect="slide" tween="quadratic" easing="in" time="150" end="0,266" start="0">WindowClose</animation>
                <include>Home_Menu</include>
                <include>Home_NowPlaying</include>
                <control type="group">
                    <bottom>266</bottom>
                    <visible>Window.IsActive(DialogKaiToast.xml)</visible>
                    <animation effect="slide" start="-1200" end="0" time="250">VisibleChange</animation>
                    <control type="image">
                        <left>0</left>
                        <bottom>0</bottom>
                        <width>900</width>
                        <height>64</height>  
                        <aspectratio>scale</aspectratio>
                        <texture colordiffuse="HomeBarBG">common/white.png</texture>                
                    </control>
                    <control type="image">
                        <left>800</left>
                        <bottom>0</bottom>
                        <width>300</width>
                        <height>64</height>  
                        <aspectratio>scale</aspectratio>
                        <texture align="left" flipy="true" flipx="false" border="70" colordiffuse="HomeBarBG">common/header.png</texture>
                    </control>
                </control>
                <control type="group">
                    <bottom>266</bottom>
                    <visible>!Window.IsActive(DialogKaiToast.xml)</visible>
                    <visible>Window.IsActive(DialogExtendedProgressBar.xml)</visible>
                    <animation effect="slide" start="-1200" end="0" time="250">VisibleChange</animation>
                    <control type="image">
                        <left>0</left>
                        <bottom>0</bottom>
                        <width>900</width>
                        <height>64</height>  
                        <aspectratio>scale</aspectratio>
                        <texture colordiffuse="HomeBarBG">common/white.png</texture>                
                    </control>
                    <control type="image">
                        <left>800</left>
                        <bottom>0</bottom>
                        <width>300</width>
                        <height>64</height>  
                        <aspectratio>scale</aspectratio>
                        <texture align="left" flipy="true" flipx="false" border="70" colordiffuse="HomeBarBG">common/header.png</texture>
                    </control>
                </control>
            </control>
        </control>

        <control type="group">
            <visible>Window.IsVisible(script-ExtendedInfo Script-DialogVideoInfo.xml) | Window.IsVisible(script-ExtendedInfo Script-DialogInfo.xml)</visible>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <include>Furniture_Background</include>
            <control type="image" description="Fanart Fade">
                <width>100%</width>
                <height>100%</height>
                <texture colordiffuse="FanartFade">common/white.png</texture>
            </control>
            <include>Furniture_TopBar</include>
        </control>

        <include>Furniture_Filter</include>

        
    </controls>

</window>