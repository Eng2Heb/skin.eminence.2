<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="Object_WeatherOutlook">
        <definition>
            <control type="group">
                <width>200</width>
                <height>340</height>
                <control type="label">
                    <font>Font-ListInfo-Small-Bold</font>
                    <height>90</height>
                    <label>$PARAM[dayname]</label>
                    <centerleft>50%</centerleft>
                    <align>center</align>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <height>200</height>
                    <width>200</width>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[Window(weather).Property($PARAM[day].OutlookIcon)]</texture>
                </control>
                <control type="label">
                    <font>Font-ListInfo-Small</font>
                    <bottom>0</bottom>
                    <height>90</height>
                    <label>[B]$INFO[Window(weather).Property($PARAM[day].HighTemp)]$INFO[System.TemperatureUnits][/B]  $INFO[Window(weather).Property($PARAM[day].LowTemp)]$INFO[System.TemperatureUnits]</label>
                    <centerleft>50%</centerleft>
                    <align>center</align>
                </control>
            </control>
        </definition>
    </include>
    <include name="Object_Scrollbar">
        <param name="left" default="0" />
        <definition>
            <control type="scrollbar" id="60">
                <onleft condition="!StringCompare(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</onleft>
                <left>$PARAM[left]</left>
                <height>height</height>
                <onright>50</onright>
                <width>8</width>
                <orientation>vertical</orientation>
                <animation effect="fade" condition="!Control.HasFocus(60) + !Container.Scrolling" time="200" start="100" end="0">Conditional</animation>
            </control>
        </definition>
    </include>
    <include name="Object_Scrollbar_Horizontal">
        <control type="scrollbar" id="61">
            <ondown condition="!StringCompare(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</ondown>
            <onup>50</onup>
            <top>710</top>
            <orientation>horizontal</orientation>
            <left>0</left>
            <width>1880</width>
            <height>8</height>
            <animation effect="fade" condition="!Control.HasFocus(61) + !Container.Scrolling" time="200" start="100" end="0">Conditional</animation>
        </control>
    </include>
    <!-- Poster -->
    <include name="Object_Poster">
        <param name="label" default="$LOCALIZE[31098]" />
        <definition>
            <control type="group">
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <height>height</height>
                <include name="Object_Line">
                    <param name="width" value="$PARAM[width]" />
                    <param name="label" value="$PARAM[label]" />
                </include>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture colordiffuse="PosterBorder">common/white.png</texture>
                </control>
                <control type="image">
                    <left>pad</left>
                    <right>pad</right>
                    <top>pad</top>
                    <bottom>pad</bottom>
                    <aspectratio>keep</aspectratio>
                    <fadetime>200</fadetime>
                    <texture background="true">$VAR[Image_Poster]</texture>
                    <visible>IsEmpty(ListItem.Art(tvshow.poster)) + IsEmpty(ListItem.Art(poster))</visible>
                </control>
                <control type="image">
                    <left>pad</left>
                    <right>pad</right>
                    <top>pad</top>
                    <bottom>pad</bottom>
                    <aspectratio>scale</aspectratio>
                    <fadetime>200</fadetime>
                    <texture background="true">$VAR[Image_Poster]</texture>
                    <visible>![IsEmpty(ListItem.Art(tvshow.poster)) + IsEmpty(ListItem.Art(poster))]</visible>
                </control>
            </control>
        </definition>
    </include>

    <!-- Thumb Info -->
    <include name="Object_ExtraInfo">
        <param name="label" default="19033" />
        <param name="left" default="1140" />
        <definition>
            <control type="group">
                <left>$PARAM[left]</left>
                <width>740</width>
                <height>height</height>
                <include name="Object_Line">
                    <param name="width" value="740" />
                    <param name="label" value="$PARAM[label]" />
                </include>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture colordiffuse="PosterBorder">common/white.png</texture>
                </control>
                <control type="grouplist">
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>pad</itemgap>
                    <orientation>vertical</orientation>
                    <left>pad</left>
                    <right>pad</right>
                    <top>pad</top>
                    <bottom>pad</bottom>
                    <control type="image">
                        <width>100%</width>
                        <height>405</height>
                        <aspectratio>scale</aspectratio>
                        <fadetime>200</fadetime>
                        <texture background="true">$VAR[Image_Thumb]</texture>
                    </control>
                    <control type="label">
                        <top>pad</top>
                        <left>pad</left>
                        <right>pad</right>
                        <height>32</height>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>pad</left>
                        <right>pad</right>
                        <height>24</height>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>$INFO[ListItem.Genre]</label>
                        <visible>!IsEmpty(ListItem.Genre)</visible>
                    </control>
                    <control type="textbox">
                        <left>pad</left>
                        <right>pad</right>
                        <height>120</height>
                        <font>Font-ListInfo</font>
                        <align>left</align>
                        <label>$VAR[Label_Plot]</label>
                        <visible>!IsEmpty(ListItem.Genre)</visible>
                    </control>
                    <control type="textbox">
                        <left>pad</left>
                        <right>pad</right>
                        <height>154</height>
                        <font>Font-ListInfo</font>
                        <align>left</align>
                        <label>$VAR[Label_Plot]</label>
                        <visible>IsEmpty(ListItem.Genre)</visible>
                    </control>
                    <control type="label">
                        <left>pad</left>
                        <right>pad</right>
                        <height>24</height>
                        <align>right</align>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>$INFO[ListItem.MPAA]$INFO[ListItem.Duration,  â€¢  , mins]</label>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <!-- Line -->
    <include name="Object_Line">
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <top>-48</top>
            <height>48</height>
            <width>$PARAM[width]</width>
            <usecontrolcoords>true</usecontrolcoords>
            <control type="label">
                <left>0</left>
                <height>100%</height>
                <width max="$PARAM[width]">auto</width>
                <label fallback="19033">$PARAM[label]</label>
                <font>Font-ListInfo-Small-Bold</font>
                <textcolor>LineLabel</textcolor>
            </control>
            <control type="image">
                <bottom>21</bottom>
                <width max="$PARAM[width]">auto</width>
                <height>3</height>
                <texture colordiffuse="PosterBorder">common/white.png</texture>
            </control>
        </control>
    </include>
    
</includes>