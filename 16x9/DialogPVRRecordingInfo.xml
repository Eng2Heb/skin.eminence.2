<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <control type="group">
            <top>210</top>
            <bottom>133</bottom>
            <centerleft>50%</centerleft>
            <width>1190</width>
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <animation effect="slide" tween="quadratic" easing="out" time="300" start="0,1920" end="0">WindowOpen</animation>
            <animation effect="slide" tween="quadratic" easing="in" time="300" end="0,1920" start="0">WindowClose</animation>
            <include>Dialog_Background</include>
            <control type="group">
                <top>70</top>
                <left>side</left>
                <right>0</right>
                <height>572</height>
                <control type="group">
                    <left>0</left>
                    <right>side</right>
                    <height>552</height>
                    <include name="Object_Line">
                        <param name="width" value="1200" />
                        <param name="label" value="$INFO[Control.GetLabel(2)]" />
                    </include>
                </control>

                <control type="grouplist">
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>pad</itemgap>
                    <orientation>vertical</orientation>
                    <left>pad</left>
                    <right>pad</right>
                    <top>pad</top>
                    <bottom>pad</bottom>
                    <control type="label">
                        <top>pad</top>
                        <left>pad</left>
                        <right>pad</right>
                        <height>36</height>
                        <font>Font-InfoBox-Title</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <left>pad</left>
                        <right>pad</right>
                        <height>32</height>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>[UPPERCASE][COLOR=$VAR[HighlightColor2]]$INFO[ListItem.Genre][/COLOR][/UPPERCASE]</label>
                    </control>
                    <control type="label">
                        <top>-42</top>
                        <left>pad</left>
                        <right>pad</right>
                        <height>28</height>
                        <align>right</align>
                        <font>Font-OSD</font>
                        <label>$INFO[ListItem.Label2]$INFO[ListItem.Duration,  -  ,]</label>
                    </control>
                    <control type="textbox">
                        <left>pad</left>
                        <right>pad</right>
                        <height>114</height>
                        <font>Font-ListInfo</font>
                        <align>left</align>
                        <label>$VAR[Label_Plot]</label>
                    </control>
                    <control type="image">
                        <top>32</top>
                        <height>270</height>
                        <width>50%</width>
                        <aspectratio>keep</aspectratio>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                    </control>
                    <control type="image">
                        <top>-280</top>
                        <right>0</right>
                        <height>270</height>
                        <width>50%</width>
                        <aspectratio>keep</aspectratio>
                        <fadetime>200</fadetime>
                        <texture background="true">$VAR[Image_PVRThumb]</texture>
                    </control>
                </control>
            </control>
            <!-- Ok Cancel Defaults -->
            <control type="grouplist" id="8000">
                <centerleft>50%</centerleft>
                <width>1150</width>
                <bottom>side</bottom>
                <height>69</height>
                <align>center</align>
                <itemgap>20</itemgap>
                <onup>11</onup>
                <ondown>noop</ondown>
                <orientation>horizontal</orientation>
                <control type="button" id="10">
                    <align>center</align>
                    <width>370</width>
                    <label>186</label>
                    <include>Defs_OptionButton</include>
                </control>
            </control>
        </control>

    </controls>

</window>