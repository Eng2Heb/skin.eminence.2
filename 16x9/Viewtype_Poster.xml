                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <viewtype label="538">bigicons</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <visible>$PARAM[condition]</visible>
                <itemlayout height="670" width="475">
                    <control type="group">
                        <left>0</left>
                        <right>side</right>
                        <control type="image">
                            <width>100%</width>
                            <height>100%</height>
                            <texture colordiffuse="PosterBorder">common/white.png</texture>
                        </control>
                        <control type="image">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <aspectratio>keep</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                            <visible>IsEmpty(ListItem.Art(tvshow.poster)) + IsEmpty(ListItem.Art(poster))</visible>
                        </control>
                        <control type="image">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                            <visible>![IsEmpty(ListItem.Art(tvshow.poster)) + IsEmpty(ListItem.Art(poster))]</visible>
                        </control>
                        <control type="image">
                            <right>side</right>
                            <top>side</top>
                            <height>32</height>
                            <width>32</width>
                            <texture>$VAR[Image_Indicator]</texture>
                            <visible>!IsEmpty(ListItem.Overlay)</visible>
                        </control>
                    </control>
                </itemlayout>

                <focusedlayout height="670" width="475">
                    <control type="group">
                        <left>0</left>
                        <right>side</right>
