<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!-- Home Bar -->
    <include name="Furniture_HomeBar">
        <control type="group">
            <!-- Backing Bar -->
            <control type="image">
                <bottom>0</bottom>
                <height>266</height>
                <aspectratio>scale</aspectratio>
                <texture colordiffuse="HomeBarBG">common/white.png</texture>
            </control>
        
            <!-- Main list -->
            <control type="panel" id="9000">
                <left>16</left>
                <right>0</right>
                <bottom>0</bottom>
                <height>266</height>
                <onup>SetProperty(FO9001,1,home)</onup>
                <onup>9001</onup>
                <ondown condition="IntegerGreaterThan(Container(9002).NumItems,0)">9002</ondown>
                <animation type="Visible">
                    <effect type="slide" start="0,266" end="0" time="150" />
                </animation>
                <orientation>horizontal</orientation>
                <scrolltime tween="sine" easing="out">240</scrolltime>
                <itemlayout width="188" height="266">
                    <control type="image">
                        <top>16</top>
                        <width>196</width>
                        <height>170</height>
                        <texture colordiffuse="HomeBarTile">common/tile.png</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <top>16</top>
                        <width>196</width>
                        <height>170</height>
                        <texture colordiffuse="HomeBarFG" diffuse="common/tile.png" aligny="center" align="center">$INFO[ListItem.Icon]</texture>
                        <aspectratio scalediffuse="false">center</aspectratio>
                        <animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
                    </control>
                    <control type="label">
                        <top>188</top>
                        <height>78</height>
                        <width>170</width>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>Font-HomeMenu</font>
                        <textcolor>HomeBarFG</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
                    </control>
                </itemlayout>

                <focusedlayout width="188" height="266">
                    <control type="image">
                        <top>16</top>
                        <width>196</width>
                        <height>170</height>
                        <texture colordiffuse="$VAR[Defs_HomeTileColor]">common/tile.png</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <top>16</top>
                        <width>196</width>
                        <height>170</height>
                        <texture colordiffuse="HomeBarFG" diffuse="common/tile.png" aligny="center" align="center">$INFO[ListItem.Icon]</texture>
                        <aspectratio scalediffuse="false">center</aspectratio>
                    </control>
                    <control type="label">
                        <top>188</top>
                        <height>78</height>
                        <width>170</width>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>Font-HomeMenu</font>
                        <textcolor>HomeBarFG</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <animation effect="slide" start="0" end="0,-10" time="100">Focus</animation>
                    </control>
                    <control type="image">
                        <bottom>12</bottom>
                        <width>170</width>
                        <height>6</height>
                        <texture colordiffuse="$VAR[Defs_HomeTileColor]">common/white.png</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                </focusedlayout>

                <content>
                    <include>skinshortcuts-mainmenu</include>
                </content>
            </control>

            <!-- Icon Hang -->
            <control type="group">
                <left>-172</left>
                <right>-172</right>
                <bottom>0</bottom>
                <height>266</height>
                <control type="image">
                    <top>16</top>
                    <left>10</left>
                    <width>196</width>
                    <height>170</height>
                    <texture colordiffuse="HomeBarBG">common/tile.png</texture>
                    <aspectratio>scale</aspectratio>
                </control>
                <control type="image">
                    <top>16</top>
                    <right>10</right>
                    <width>196</width>
                    <height>170</height>
                    <texture colordiffuse="HomeBarBG">common/tile.png</texture>
                    <aspectratio>scale</aspectratio>
                </control>
                <control type="image">
                    <bottom>0</bottom>
                    <right>10</right>
                    <width>196</width>
                    <height>70</height>
                    <texture colordiffuse="HomeBarBG">common/white.png</texture>
                    <aspectratio>scale</aspectratio>
                </control>
            </control>

            <!-- Arrows -->
            <control type="group">
                <visible>Container(9000).HasNext | Container(9000).HasPrevious</visible>
                <left>0</left>
                <right>0</right>
                <bottom>0</bottom>
                <height>266</height>
                <control type="image">
                    <centertop>45</centertop>
                    <left>8</left>
                    <width>16</width>
                    <height>16</height>
                    <texture colordiffuse="ListLabel">common/16-arrow-left.png</texture>
                </control>
                <control type="image">
                    <centertop>160</centertop>
                    <right>8</right>
                    <width>16</width>
                    <height>16</height>
                    <texture colordiffuse="ListLabel" flipx="true">common/16-arrow-left.png</texture>
                </control>
            </control>

            <!-- SubMenu -->
            <control type="group">
                <animation effect="slide" tween="quadratic" easing="out" time="200" start="0,-400" end="0" condition="Control.HasFocus(9002)" reversible="false">Conditional</animation>
                <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,-400" start="0" condition="!Control.HasFocus(9002)" reversible="false">Conditional</animation>
                <visible>Control.HasFocus(9000) | Control.HasFocus(9002)</visible>
                <include>Dialog_Top</include>
                <include>Dialog_Background</include>
                <include name="Dialog_Top_IconHeader">
                    <param name="label" value="$INFO[Container(9000).ListItem.Label,, ]$LOCALIZE[1034]" />
                    <param name="icon" value="$INFO[Container(9000).ListItem.Icon]" />
                </include>
                <include name="Dialog_Top_Arrows">
                    <param name="id" value="9002" />
                </include>

                <control type="panel" id="9002">
                    <onup>9000</onup>
                    <ondown>9000</ondown>
                    <onback>9000</onback>
                    <left>pad</left>
                    <right>0</right>
                    <top>80</top>
                    <bottom>pad</bottom>
                    <onleft>noop</onleft>
                    <onright>noop</onright>
                    <scrolltime>200</scrolltime>
                    <orientation>horizontal</orientation>
                    <itemlayout width="374" height="69">
                        <control type="image">
                            <width>364</width>
                            <height>69</height>
                            <texture colordiffuse="PosterBorder">common/white.png</texture>
                        </control>
                        <control type="label">
                            <left>side</left>
                            <right>30</right>
                            <height>69</height>
                            <textcolor>ListLabel</textcolor>
                            <font>Font-ListInfo-Small</font>
                            <aligny>center</aligny>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="374" height="69">
                        <control type="image">
                            <width>364</width>
                            <height>69</height>
                            <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                        </control>
                        <control type="label">
                            <left>side</left>
                            <right>30</right>
                            <height>69</height>
                            <textcolor>Selected</textcolor>
                            <font>Font-ListInfo-Small</font>
                            <aligny>center</aligny>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                    <content>
                        <include>skinshortcuts-submenu</include>
                    </content>
                </control>

            </control>
           
         
        </control>
    </include>

