<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <onload>ClearProperty(extinfo,home)</onload>
    <controls>

        <control type="group">
            <include>Animation_Common_Info</include>
            <left>side</left>
            <right>side</right>
            <top>top</top>
            <height>height</height>
            <include name="Object_Poster">
                <param name="left" value="0" />
                <param name="width" value="posterw" />
            </include>
            <control type="group">
                <left>477</left>
                <right>0</right>
                <control type="group">
                    <visible allowhiddenfocus="true">!StringCompare(Control.GetLabel(5),$LOCALIZE[207])</visible>
                    <include name="Object_Line">
                        <param name="width" value="listw" />
                        <param name="label" value="207" />
                    </include>
                </control>
                <control type="group">
                    <visible allowhiddenfocus="true">StringCompare(Control.GetLabel(5),$LOCALIZE[207])</visible>
                    <include name="Object_Line">
                        <param name="width" value="listw" />
                        <param name="label" value="206" />
                    </include>
                </control>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture colordiffuse="PosterBorder">common/white.png</texture>
                </control>

                <!-- Info -->
                <control type="group">
                    <visible allowhiddenfocus="true">!StringCompare(Control.GetLabel(5),$LOCALIZE[207])</visible>
                    <left>30</left>
                    <right>30</right>
                    <top>30</top>
                    <control type="label">
                        <width>100%</width>
                        <height>36</height>
                        <align>left</align>
                        <font>Font-InfoBox-Title</font>
                        <label>$VAR[Label_Tagline]</label>
                        <textcolor>SubLabel</textcolor>
                    </control>
                    <!-- Details -->
                    <control type="grouplist">
                        <include>Info_DetailsGrouplist</include>
                        <include>Info_Videos</include>
                    </control>
                </control>

                <!-- Plot -->
                <control type="textbox">
                    <include>Info_Textbox</include>
                    <label>$VAR[Label_Plot]</label>
                    <visible allowhiddenfocus="true">!StringCompare(Control.GetLabel(5),$LOCALIZE[207])</visible>
                </control>

                <!-- Button grouplist -->
                <control type="grouplist" id="9000">
                    <include>Info_ButtonGrouplist</include>
                    <onup condition="StringCompare(Control.GetLabel(5),$LOCALIZE[207])">51</onup>
                    
                    <!-- Play/Browse Button -->
                    <control type="togglebutton" id="8">
                        <label>208</label>
                        <altlabel>1024</altlabel>
                        <usealttexture>Container.Content(TVShows)</usealttexture>
                        <width>222</width>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Trailer Button -->
                    <control type="button" id="11">
                        <width>222</width>
                        <label>20410</label>
                        <visible>!IsEmpty(ListItem.Trailer)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Cast Button -->
                    <control type="button" id="5">
                        <label>206</label>
                        <width>222</width>
                        <onclick condition="StringCompare(Control.GetLabel(5),$LOCALIZE[207])">SetFocus(51)</onclick>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Refresh Button -->
                    <control type="button" id="6">
                        <width>222</width>
                        <label>184</label>
                        <width>147</width>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Get Thumb Button -->
                    <control type="button" id="10">
                        <width>222</width>
                        <label>13511</label>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Artwork Downloader Button -->
                    <control type="button" id="20">
                        <width>222</width>
                        <label>31043</label>
                        <onclick condition="Container.Content(tvshows)">XBMC.RunScript(script.artwork.downloader, mode=gui, mediatype=tvshow, dbid=$INFO[ListItem.DBID])</onclick>
                        <onclick condition="Container.Content(movies)">XBMC.RunScript(script.artwork.downloader, mode=gui, mediatype=movie, dbid=$INFO[ListItem.DBID])</onclick>
                        <visible>System.HasAddon(script.artwork.downloader) + [Container.Content(movies) | Container.Content(tvshows)]</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    
                    <!-- Cinema Experience Button -->
                    <control type="button" id="21">
                        <width>222</width>
                        <label>31066</label>
                        <onclick>Dialog.Close(MovieInformation)</onclick>
                        <onclick>XBMC.RunScript(script.cinema.experience,movieid=$INFO[ListItem.DBID])</onclick>
                        <visible>System.HasAddon(script.cinema.experience) + Container.Content(movies)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>

                </control>
                <!-- Cast -->
                <control type="group">
                    <top>30</top>
                    <visible allowhiddenfocus="true">StringCompare(Control.GetLabel(5),$LOCALIZE[207])</visible>
                    <include name="Dialog_BasicList">
                        <param name="width" value="1403" />
                        <param name="height" value="552" />
                        <param name="id" value="50" />
                        <param name="type" value="list" />
                        <param name="onleft" value="SendClick(5)" />
                        <param name="onback" value="9000" />
                        <param name="onback2" value="SendClick(5)" />
                        <param name="ondown" value="9000" />
                        <!-- <param name="onright" value="SetProperty(extinfo,1,home)" />
                        <param name="onright2" value="RunScript(script.extendedinfo,info=extendedactorinfo,name=$INFO[Container(50).ListItem.Label])" /> -->
                        <param name="backpanel" value="false" />
                    </include>
                    <control type="image">
                        <top>-28</top>
                        <centerleft>50%</centerleft>
                        <height>24</height>
                        <width>24</width>
                        <texture colordiffuse="LineLabel" flipy="true">common/spin-down.png</texture>
                        <visible>Container(50).HasPrevious + Control.HasFocus(50)</visible>
                    </control>
                    <control type="image">
                        <top>556</top>
                        <centerleft>50%</centerleft>
                        <height>24</height>
                        <width>24</width>
                        <texture colordiffuse="LineLabel">common/spin-down.png</texture>
                        <visible>Container(50).HasNext + Control.HasFocus(50)</visible>
                    </control>
                </control>
            </control>

        </control>
        <control type="button" id="51" description="Cast List Control">
            <visible allowhiddenfocus="true">false</visible>
            <onup>Control.Move(50,-1)</onup>
            <ondown>Control.Move(50,1)</ondown>
            <onback>9000</onback>
            <onback>SendClick(5)</onback>
            <onleft>9000</onleft>
            <onleft>SendClick(5)</onleft>
            <onright>9000</onright>
            <onright>SendClick(5)</onright>
            <onclick>SetProperty(extinfo,1,home)</onclick>
            <onclick>RunScript(script.extendedinfo,info=extendedactorinfo,name=$INFO[Container(50).ListItem.Label])</onclick>
        </control>




    </controls>

</window>