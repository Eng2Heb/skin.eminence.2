                    <top>0</top>
                    <height>100%</height>
                    <textcolor>Selected</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                    <visible>IsEmpty(ListItem.Overlay) | Container.Content(seasons) | Container.Content(sets) | !$PARAM[label2]</visible>
