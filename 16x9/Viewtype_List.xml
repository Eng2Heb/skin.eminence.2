<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="Viewtype_List">
        <control type="group">
            <visible>Control.IsVisible(50)</visible>
            <left>side</left>
            <right>side</right>
            <top>top</top>
            <height>height</height>
            <include name="Object_Poster">
                <param name="left" value="posterx" />
                <param name="width" value="posterw" />
            </include>
            <include name="View_List">
                <param name="posx" value="0" />
                <param name="width" value="listw" />
                <param name="id" value="50" />
                <param name="condition" value="true" />
            </include>
        </control>
    </include>

    <!-- List -->
    <include name="View_List">
        <control type="group">
            <left>$PARAM[posx]</left>
            <width>$PARAM[width]</width>
            <include name="Object_Line">
                <param name="width" value="$PARAM[width]" />
                <param name="label" value="$INFO[Control.GetLabel(3),, ]$INFO[Control.GetLabel(4),[COLOR=PosterBorder]-[/COLOR] , ]" />
            </include>
            <control type="image">
                <width>$PARAM[width]</width>
                <height>height</height>
                <texture colordiffuse="PosterBorder">common/white.png</texture>
            </control>
            <include>Object_Scrollbar</include>
            <control type="panel" id="$PARAM[id]">
                <top>0</top>
                <left>0</left>
                <width>$PARAM[width]</width>
                <height>height</height>
                <onup>$PARAM[id]</onup>
                <ondown>$PARAM[id]</ondown>
                <onleft>60</onleft>
                <onright condition="!Skin.HasSetting(KioskMode)">9000</onright>
                <pagecontrol>60</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="535">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <visible>$PARAM[condition]</visible>
                <itemlayout height="69" width="$PARAM[width]">
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <top>0</top>
                        <height>100%</height>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>150</right>
                        <top>0</top>
                        <height>100%</height>
                        <align>right</align>
                        <font>Font-ListInfo</font>
                        <label>$VAR[Label_Label3]</label>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>!Container.Content(seasons) + !Container.Content(sets)</visible>
                    </control>
                    <control type="image">
                        <right>95</right>
                        <centertop>50%</centertop>
                        <height>32</height>
                        <width>32</width>
                        <texture>$VAR[Image_Indicator]</texture>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>!Container.Content(seasons) + !Container.Content(sets)</visible>
                    </control>
                    <control type="image">
                        <right>30</right>
                        <centertop>50%</centertop>
                        <height>32</height>
                        <width>32</width>
                        <texture>$VAR[Image_Indicator]</texture>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>Container.Content(seasons) | Container.Content(sets)</visible>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <top>0</top>
                        <height>100%</height>
                        <align>right</align>
                        <font>Font-ListInfo</font>
                        <label>$INFO[ListItem.Rating]</label>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>!Container.Content(seasons) + !Container.Content(sets)</visible>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <top>0</top>
                        <height>100%</height>
                        <align>right</align>
                        <font>Font-ListInfo</font>
                        <label>$INFO[ListItem.Label2]</label>
                        <visible>IsEmpty(ListItem.Overlay)</visible>
                    </control>
                </itemlayout>

                <focusedlayout height="69" width="$PARAM[width]">
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <left>30</left>
                        <right>30</right>
                        <top>0</top>
                        <height>100%</height>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <left>30</left>
                        <right>150</right>
                        <top>0</top>
                        <height>100%</height>
                        <align>right</align>
                        <font>Font-ListInfo</font>
                        <label>$VAR[Label_Label3]</label>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>!Container.Content(seasons) + !Container.Content(sets)</visible>
                    </control>
                    <control type="image">
                        <right>95</right>
                        <centertop>50%</centertop>
                        <height>32</height>
                        <width>32</width>
                        <texture>$VAR[Image_Indicator]</texture>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>!Container.Content(seasons) + !Container.Content(sets)</visible>
                    </control>
                    <control type="image">
                        <right>30</right>
                        <centertop>50%</centertop>
                        <height>32</height>
                        <width>32</width>
                        <texture>$VAR[Image_Indicator]</texture>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>Container.Content(seasons) | Container.Content(sets)</visible>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <left>30</left>
                        <right>30</right>
                        <top>0</top>
                        <height>100%</height>
                        <align>right</align>
                        <font>Font-ListInfo</font>
                        <label>$INFO[ListItem.Rating]</label>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <visible>!Container.Content(seasons) + !Container.Content(sets)</visible>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <left>30</left>
                        <right>30</right>
                        <top>0</top>
                        <height>100%</height>
                        <align>right</align>
                        <font>Font-ListInfo</font>
                        <label>$INFO[ListItem.Label2]</label>
                        <visible>IsEmpty(ListItem.Overlay)</visible>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </include>

</includes>
