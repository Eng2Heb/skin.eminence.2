<?xml version="1.0" encoding="utf-8"?>
<window>
    <backgroundcolor>Background</backgroundcolor>

    <controls>
        <include>Furniture_Background</include>
        <include>Furniture_TopBar</include>
        <include>Furniture_RSS</include>

        <control type="group">
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <include>Defs_ViewBackground</include>

            <!-- Settings Level -->
            <control type="group">
                <visible>!Control.HasFocus(20)</visible>
                <include content="Object_Headline">
                    <param name="label" value="$INFO[Control.GetLabel(20),$LOCALIZE[31205]: ,]" />
                </include>
            </control>
            <control type="group">
                <visible>Control.HasFocus(20)</visible>
                <include content="Object_Headline">
                    <param name="label" value="[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(20),$LOCALIZE[31205]: ,][/COLOR]" />
                </include>
            </control>
            <control type="button" id="20">
                <ondown>3</ondown>
                <onleft>3</onleft>
                <onright>3</onright>
                <onclick>settingslevelchange</onclick>
                <texturefocus>noop</texturefocus>
                <texturenofocus>noop</texturenofocus>
                <font>-</font>
                <top>-25</top>
                <width>300</width>
                <height>50</height>
            </control>

            <control type="group">
                <left>bigpad</left>
                <top>bigpad</top>
                <height>posterh</height>
                <right>bigpad</right>

                <include>Object_Background</include>

                <!-- MainList -->
                <control type="group">
                    <top>0</top>
                    <left>bigpad</left>
                    <right>bigpad</right>
                    <height>72</height>
                    <control type="image">
                        <width>16</width>
                        <height>16</height>
                        <left>-48</left>
                        <top>32</top>
                        <texture colordiffuse="ListLabel">common/16-arrow-left.png</texture>
                        <animation effect="fade" start="100" end="5" time="100" condition="!Container(3).HasPrevious">Conditional</animation>
                    </control>
                    <control type="image">
                        <width>16</width>
                        <height>16</height>
                        <right>-48</right>
                        <top>32</top>
                        <texture colordiffuse="ListLabel" flipx="true">common/16-arrow-left.png</texture>
                        <animation effect="fade" start="100" end="5" time="100" condition="!Container(3).HasNext">Conditional</animation>
                    </control>

                    <control type="grouplist" id="3">                
                        <itemgap>20</itemgap>
                        <onleft>noop</onleft>
                        <onup>20</onup>
                        <onright>noop</onright>
                        <ondown>5</ondown>
                        <align>center</align>
                        <orientation>horizontal</orientation>
                    </control>
                </control>

                <!-- Sub List -->
                <control type="group">
                    <top>82</top>
                    <left>bigpad</left>
                    <right>bigpad</right>
                    <bottom>62</bottom>
                    <control type="image"><texture colordiffuse="PosterBorder">common/white.png</texture></control>
                    <control type="grouplist" id="5">                
                        <itemgap>0</itemgap>
                        <onup>3</onup>
                        <onleft>3</onleft>
                        <onright>3</onright>
                        <ondown>noop</ondown>
                    </control>
                </control>

                <!-- Text Box RSS -->
                <control type="group">
                    <bottom>-2</bottom>
                    <height>64</height>
                    <control type="image">
                        <posx>16</posx>
                        <posy>16</posy>
                        <width>32</width>
                        <height>32</height>
                        <texture colordiffuse="ListLabel">common/rss.png</texture>
                    </control>
                    <control type="label">
                        <left>64</left>
                        <right>bigpad</right>
                        <centerbottom>50%</centerbottom>
                        <height>20</height>
                        <aligny>center</aligny>
                        <font>Font-RSS</font>
                        <label>$INFO[Control.GetLabel(6)]</label>
                        <scroll>true</scroll>
                        <textcolor>ListLabel</textcolor>
                        <wrapmultiline>false</wrapmultiline>
                    </control>
                    <control type="label" id="6"><visible>false</visible></control>
                </control>
            </control>   
        </control>

        

        <!-- Category Template -->
        <control type="button" id="10">
            <width>settingscategoryw</width>
            <height>72</height>
            <align>center</align>
            <textcolor>Disabled</textcolor>
            <font>Font-ListInfo-Small-Bold</font>
            <texturefocus colordiffuse="$VAR[HighlightColor]" border="10">common/underline.png</texturefocus>
            <alttexturefocus colordiffuse="$VAR[HighlightColor]" border="10">common/underline.png</alttexturefocus>
            <include>Defs_OptionButton</include>
        </control>

        <!-- Default Templates -->
        <control type="button" id="7">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>
        <control type="radiobutton" id="8">
            <width>100%</width>
            <height>72</height>
            <radioposx>settingswideradioposx</radioposx>
            <include>Defs_OptionButton</include>
        </control>
        <control type="spincontrolex" id="9">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>
        <control type="label" id="14">
            <width>100%</width>
            <height>72</height>
            <align>center</align>
            <font>Font-ListInfo-Small-Bold</font>
            <include>Defs_OptionButton</include>
        </control>
        <control type="image" id="11">
            <width>100%</width>
            <height>72</height>
            <texture border="30">common/div.png</texture>
            <include>Defs_OptionButton</include>
        </control>
        <control type="edit" id="12">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>
        <control type="sliderex" id="13">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>

    </controls>

</window>