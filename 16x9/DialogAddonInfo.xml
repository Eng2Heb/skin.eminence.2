<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- addoninformation -->
    <defaultcontrol always="true">9000</defaultcontrol>

    <controls>

        <control type="group">
            <include>Animation_Common_Info</include>
            <left>side</left>
            <right>side</right>
            <top>top</top>
            <height>height</height>
            <include name="Object_Poster">
                <param name="left" value="0" />
                <param name="width" value="posterw" />
            </include>
            <control type="group">
                <left>477</left>
                <right>0</right>
                <include name="Object_Line">
                    <param name="width" value="listw" />
                    <param name="label" value="19033" />
                </include>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture colordiffuse="PosterBorder">common/white.png</texture>
                </control>

                <!-- Info -->
                <control type="group">
                    <left>30</left>
                    <right>30</right>
                    <top>30</top>
                    <control type="label">
                        <width>100%</width>
                        <height>36</height>
                        <align>left</align>
                        <font>Font-InfoBox-Title</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>SubLabel</textcolor>
                    </control>
                    <!-- Details -->
                    <control type="grouplist">
                        <include>Info_DetailsGrouplist</include>
                        <include>Info_Addons</include>
                    </control>
                </control>

                <!-- Plot -->
                <control type="textbox">
                    <include>Info_Textbox</include>
                    <label>$INFO[ListItem.Property(Addon.Description)]</label>
                </control>

                <!-- Button grouplist -->
                <control type="grouplist" id="9000">
                    <include>Info_ButtonGrouplist</include>
                    <!-- Launch Addon Button -->
                    <control type="button" id="12">
                        <width>222</width>
                        <label>518</label>
                        <visible>Control.IsEnabled(12)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Configure Addon Button -->
                    <control type="button" id="9">
                        <width>222</width>
                        <label>24020</label>
                        <visible>Control.IsEnabled(9)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Update Addon Button -->
                    <control type="button" id="8">
                        <width>222</width>
                        <label>24069</label>
                        <visible>Control.IsEnabled(8)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Install/UnInstall Addon button -->
                    <control type="button" id="6">
                        <width>222</width>
                        <label>24022</label>
                        <visible>Control.IsEnabled(6)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Enable/Disable Addon button -->
                    <control type="button" id="7">
                        <width>222</width>
                        <label>24021</label>
                        <visible>Control.IsEnabled(7)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Rollback Button -->
                    <control type="button" id="11">
                        <width>222</width>
                        <label>24048</label>
                        <visible>Control.IsEnabled(11)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                    <!-- Changelog Button -->
                    <control type="button" id="10">
                        <width>222</width>
                        <label>24036</label>
                        <visible>Control.IsEnabled(10)</visible>
                        <font>Font-ListInfo-Small-Bold</font>
                        <include>Defs_OptionButton</include>
                    </control>
                </control>
            </control>

        </control>

    </controls>

</window>