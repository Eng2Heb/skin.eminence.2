<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- filestackingdialog -->
    <defaultcontrol always="true">450</defaultcontrol>
    <controls>
        <control type="group">
            <include>Dialog_Top</include>
            <include>Dialog_Background</include>
            <include name="Dialog_Top_IconHeader">
                <param name="label" value="$INFO[ListItem.Label]" />
                <param name="icon" value="special://skin/extras/icons/info.png" />
            </include>
            <include name="Dialog_Top_Arrows">
                <param name="id" value="450" />
            </include>

            <control type="panel" id="450">
                <left>pad</left>
                <right>0</right>
                <top>80</top>
                <bottom>pad</bottom>
                <onleft>450</onleft>
                <onright>450</onright>
                <scrolltime>200</scrolltime>
                <orientation>horizontal</orientation>
                <itemlayout width="374" height="69">
                    <control type="image">
                        <width>364</width>
                        <height>69</height>
                        <texture colordiffuse="PosterBorder">common/white.png</texture>
                    </control>
                    <control type="label">
                        <left>side</left>
                        <right>30</right>
                        <height>69</height>
                        <textcolor>ListLabel</textcolor>
                        <font>Font-ListInfo-Small</font>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="374" height="69">
                    <control type="image">
                        <width>364</width>
                        <height>69</height>
                        <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                    </control>
                    <control type="label">
                        <left>side</left>
                        <right>30</right>
                        <height>69</height>
                        <textcolor>Selected</textcolor>
                        <font>Font-ListInfo-Small</font>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>

        </control>
    </controls>

</window>